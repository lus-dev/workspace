<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:bind="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="viewModel"
            type="lus.areapass.dashboard.viewmodels.DashboardPassItemViewModel" />

    </data>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="45dp"
        bind:background="@{viewModel.background}"
        tools:background="@drawable/item_bgd_dashboard_pass">

        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginStart="15dp"
            android:layout_weight="0.5"
            android:gravity="center_vertical"
            android:text="@{viewModel.areaName}"
            android:textColor="@android:color/white"
            android:textSize="14sp"
            tools:text="Icehall" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="0.25"
            android:background="@drawable/field_bgd_dashboard_valid_thru"
            android:gravity="center"
            android:text="@{viewModel.expirationDate}"
            android:textColor="@android:color/white"
            android:textSize="14sp"
            tools:text="valid thru\nApr 01" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginEnd="0dp"
            android:layout_weight="0.2"
            android:gravity="center"
            android:text="@{viewModel.visits}"
            android:textColor="@android:color/white"
            android:textSize="14sp"
            tools:text="1 mo." />

    </LinearLayout>

</layout>